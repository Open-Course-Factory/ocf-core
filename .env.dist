ENVIRONMENT=development

OCF_VERSION=0.1.0
OCF_API_URL=localhost:8080

POSTGRES_HOST=postgres
POSTGRES_USER=go_user
POSTGRES_PASSWORD=go_password
POSTGRES_DB=go_db
DATABASE=postgres

CASDOOR_ENDPOINT="http://casdoor:8000"
CASDOOR_CLIENT_ID=
CASDOOR_CLIENT_SECRET=
CASDOOR_ORGANIZATION_NAME=
CASDOOR_APPLICATION_NAME=

PGADMIN_DEFAULT_EMAIL=
PGADMIN_DEFAULT_PASSWORD=

# === Configuration Worker OCF ===
# URL de base du worker OCF
OCF_WORKER_URL=http://localhost:8081
# Timeout pour les requêtes au worker (en secondes)
OCF_WORKER_TIMEOUT=300
# Nombre de tentatives en cas d'échec
OCF_WORKER_RETRY_COUNT=3
# Intervalle entre les vérifications de statut (en secondes)
OCF_WORKER_POLL_INTERVAL=5

# === Configuration pour les tests ===
# Utiliser le mock worker pour les tests
USE_MOCK_WORKER=true

# Niveau de log pour le développement
LOG_LEVEL=debug

TERMINAL_TRAINER_URL=http://host.docker.internal:8090
TERMINAL_TRAINER_ADMIN_KEY=