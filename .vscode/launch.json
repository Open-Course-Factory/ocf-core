    "version": "0.2.0",
    "configurations": [

    
        {
            "name": "Launch API",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "env": {}
        },
        {
            "name": "Launch Course Gen",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "args": ["-c", "golang", "-t", "sdv", "-e", "html", "--dry-run"],
            "env": {}
        },
        {
            "name": "Launch Downloaded Course Gen",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "args": ["-c", "golang", 
                     "--course-repo", "git@usine.solution-libre.fr:open-course-factory/ocf-course-golang-beginner.git", 
                     "-t", "sdv",
                     "--theme-repo", "git@usine.solution-libre.fr:open-course-factory/ocf-slidev-theme-sdv.git",
                     "-e", "html", 
                     "--course-repo-branch", "slidev-migration"
                    ],
            "env": {}
        }
    ]
}